{
	"name": "ext-shared",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/ext-shared/src",
	"prefix": "sneat",
	"targets": {
		"build": {
			"executor": "@nx/angular:ng-packagr-lite",
			"outputs": ["{workspaceRoot}/dist/libs/ext-shared"],
			"options": {
				"project": "libs/ext-shared/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/ext-shared/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/ext-shared/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/libs/ext-shared"],
			"options": {
				"jestConfig": "libs/ext-shared/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"libs/ext-shared/**/*.ts",
					"libs/ext-shared/**/*.html"
				]
			}
		}
	}
}
