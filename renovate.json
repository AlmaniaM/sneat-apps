{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "extends": "monorepo:nrwl",
      "groupName": "nrwl monorepo",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "extends": "monorepo:nrwl",
      "groupName": "nrwl monorepo",
      "automerge": false,
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    },
    {
      "groupName": "angular automerge",
      "extends": [
        "monorepo:angular",
        "monorepo:angular-cli",
        "monorepo:angular-eslint"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "angular major",
      "extends": [
        "monorepo:angular",
        "monorepo:angular-cli",
        "monorepo:angular-eslint"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "groupName": "ionic native",
      "extends": [
        "monorepo:ionic-native"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "@sentry/"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "postcss"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePatterns": [
        "karma",
        "jasmine",
        "jest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "eslint"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "@ionic/"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackagePrefixes": [
        "@ionic/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "@capacitor/"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "@nxtend/"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePrefixes": [
        "@types/"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
