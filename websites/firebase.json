{
  "hosting": [
    {
      "target": "sneat-eu",
      "public": "sneat.app",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/pwa/**",
          "destination": "/pwa/index.html"
        }
      ]
    },
    {
      "target": "logistus",
      "public": "logistus.app",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/pwa/**",
          "destination": "/pwa/index.html"
        }
      ]
    }
  ]
}
